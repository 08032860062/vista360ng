{
  "name": "vista360-pilot",
  "version": "1.0.0",
  "description": "Pilot marketplace for Vista360 (simple Express + static frontend)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client:install": "cd frontend && npm install",
    "client:start": "cd frontend && npx ng serve --port 4200",
    "client:build": "cd frontend && npx ng build --configuration production",
    "test": "jest --runInBand",
    "screenshot": "node tools/screenshot.js",
    "visual:update-baseline": "node tools/update-baselines.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "puppeteer": "^21.6.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "supertest": "^7.1.4"
  }
}
